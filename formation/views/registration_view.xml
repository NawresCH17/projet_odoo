<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
      <!--Registration-->
        <record id="reg_tree_view" model="ir.ui.view">
            <field name="name">registration.registration.tree</field>
            <field name="model">registration.registration</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Inscription">
                    <field name="name"/>
                    <!--            <field name="code"/>-->
                    <field name="start_date"/>
                    <!--            <field name="end_date"/>-->
                    <field name="cycle_id"/>
                    <field name="year_id"/>
                    <field name="student_id"/>
                </tree>
            </field>
        </record>

        <record id="reg_form_view" model="ir.ui.view">
            <field name="name">registration.registration.form</field>
            <field name="model">registration.registration</field>
            <field name="arch" type="xml">
                <form string="Registration">
                    <header>
                        <button name="action_new" states="cancel" string="New" type="object" class="oe_highlight"/>
                        <button name="action_done" states="new" string="Valid" type="object" class="oe_highlight"/>
                        <button name="action_cancel" states="new" string="Cancel" type="object" class="oe_highlight"/>
                        <button name="print_report" string="Print" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar" clickable="true"/>
                    </header>

                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="%(formation.claim_action_view)d"
                                    type="action"
                                    class="oe_inline oe_stat_button"
                                    icon="fa-book"
                                    context="{'search_default_reg_id': active_id}"
                                    help="show the information for this">
                                <field name="nbr" widget="statinfo" string="Claims"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="student_id"/>
<!--                                <field name="nbr"/>-->
                            </group>
                            <group>
                                <field name="code"/>
                                <field name="cycle_id"/>
                                <field name="year_id"/>
<!--                                <field name="claim_ids"/>-->

                            </group>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="reg_action_view">
            <field name="name">Inscription</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">registration.registration</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
