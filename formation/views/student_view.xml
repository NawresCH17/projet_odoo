<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="eleve_menu_action" model="ir.actions.act_window">
			<field name="name">Students</field>
			<field name="res_model">eleve.eleve</field>
			<field name="view_mode">tree,form,kanban</field>
			<field name="domain">[]</field>
		</record>
		<record id="eleve_kanban_view" model="ir.ui.view">
			<field name="name">eleve.eleve.kanban</field>
			<field name="model">eleve.eleve</field>
			<field name="arch" type="xml">
				<kanban>
					<field name="photo"/>
					<field name="first_name"/>
					<field name="last_name"/>
					<field name="class_id"/>

					<templates>
					  <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                          <div class="o_kanban_image">
                            <field name="photo" widget="image" />
                          </div>
                          <div class="oe_kanban_global_click">
							  <strong>
                                 <p><field name="first_name"/>
									 <field name="last_name"/></p>
							  </strong>
							  <div class="o_kanban_details">
							     ID:<field name="name"/>
							  </div>
							  <div class="o_kanban_details">
							     Class:<field name="class_id"/>
							  </div>

						  </div>
                        </div>
                      </t>
                    </templates>
				</kanban>
			</field>
		</record>

		<record model="ir.ui.view" id="eleve_form_view">
	        <field name="name">Students</field>
	        <field name="model">eleve.eleve</field>
	        <field name="arch" type="xml">
	            <form string="Students">
	                <header>
						<button name="print_carte" string="Print" type="object" class="oe_highlight"/>
	            	</header>
	                <sheet>
   			           <field name="photo" widget="image" class="oe_avatar oe_right"/>
            			<div class="col-8">

							<h2>
								<group>
									<field name="name"/>
								</group>
								<group>
                                    <field name="first_name" placeholder="First Name"/>
								</group>
								<group>
									<field name="last_name" placeholder="Last Name"/>
								</group>
							</h2>
						</div>
	                	<notebook>
							<page name="Student" string="General Information ">
								<group>
									<group string="Identity">
										<field name="date_birth"/>
										<field name="gender"/>
										<field name="telephone"/>
										<field name="email"/>
										<field name="nationality"/>
										<field name="num_cin"/>
										<field name="address"/>
									</group>
								</group>
							</page>
							<page name="Student" string="School information ">

<!--								<group>-->
<!--									<field name="reg_ids"/>-->
<!--								</group>-->
								<group>
									<field name="class_id"/>
								</group>
								<group>
									<field name="status"/>
								</group>
							</page>
						</notebook>
	                </sheet>
	                <div class="oe_chatter">
	                    <field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="activity_ids" widget="mail_activity"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>
	            </form>
	        </field>
	    </record>


	    <record id="eleve_tree_view" model="ir.ui.view">
			<field name="name">StudentTree</field>
			<field name="model">eleve.eleve</field>
			<field name="arch" type="xml">
				<tree string="Student">
					<field name="name"/>
					<field name="first_name"/>
					<field name="last_name"/>
					<field name="nationality"/>
					<field name="num_cin"/>
					<field name="email"/>
					<field name="status"/>
					<field name="class_id"/>
				</tree>
			</field>
		</record>

		<!-- Personnel -->
		<record id="personnel_menu_action" model="ir.actions.act_window">
			<field name="name">Personnel Administrative</field>
			<field name="res_model">personnel.personnel</field>
			<field name="view_mode">tree,form,kanban</field>
			<field name="domain">[]</field>
		</record>
		<record id="personnel_kanban_view" model="ir.ui.view">
			<field name="name">personnel.personnel.kanban</field>
			<field name="model">personnel.personnel</field>
			<field name="arch" type="xml">
				<kanban>
					<field name="photo"/>
					<field name="first_name"/>
					<field name="last_name"/>
					<field name="num_cin"/>
					<field name="position"/>

					<templates>
					  <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                          <div class="o_kanban_image">
                            <field name="photo" widget="image" />
                          </div>
                          <div class="oe_kanban_details">
							  <strong class="o_kanban_record_title">
                                 <p><field name="first_name"/>
									 <field name="last_name"/></p>
							  </strong>
						  </div>
							<div class="oe_kanban_details">
							  Position: <field name="position"/>
						    </div>
							<div class="oe_kanban_details">
								CIN: <field name="num_cin"/>
							</div>
                        </div>
                      </t>
                    </templates>
				</kanban>
			</field>
		</record>

		<record model="ir.ui.view" id="personnel_form_view">
	        <field name="name">Personnel Administrative</field>
	        <field name="model">personnel.personnel</field>
	        <field name="arch" type="xml">
	            <form string="Personnel Administrative">
	                <sheet>
            			<field name="photo" widget="image" class="oe_avatar oe_right"/>
            			<div class="col-8">

							<h2>
								<group>
                                    <field name="first_name" placeholder="First Name"/>
								</group>
								<group>
									<field name="last_name" placeholder="Last Name"/>
								</group>
							</h2>
						</div>
	                	<notebook>
							<page name="Personnel Administrative" string="General Information ">
								<group>
									<group string="Identity">
										<field name="date_birth"/>
										<field name="gender"/>
										<field name="telephone"/>
										<field name="email"/>
<!--										<field name="nationality"/>-->
										<field name="num_cin"/>
										<field name="address"/>
									</group>
									<group string="other information">
										<field name="status"/>
										<field name="position"/>
									</group>
								</group>
							</page>
						</notebook>
	                </sheet>
	                <div class="oe_chatter">
	                    <field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="activity_ids" widget="mail_activity"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>
	            </form>
	        </field>
	    </record>


	    <record id="personnel_tree_view" model="ir.ui.view">
			<field name="name">personnelTree</field>
			<field name="model">personnel.personnel</field>
			<field name="arch" type="xml">
				<tree string="Personnel">
					<field name="first_name"/>
					<field name="last_name"/>
					<field name="date_birth"/>
<!--					<field name="nationality"/>-->
					<field name="num_cin"/>
					<field name="email"/>
					<field name="telephone"/>
					<field name="status"/>
					<field name="position"/>
				</tree>
			</field>
		</record>


	</data>
</odoo>