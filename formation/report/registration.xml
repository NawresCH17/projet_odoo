<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <template id="report_template_reg">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">

                        <div class="page">
                            <div class="row">
                                <t t-if="entete">
							     <img t-attf-src="static/description/logo.png" style="width: 100%; height:200px;"/>
						       </t>
                                <h3 style="text-align:center;font-weight: bold;">FICHE OF INSCRIPTION</h3>
							   <br/>

                                <div class="col-xs-2">
                                    <p style="color:red;font-weight: bold;">Nom:</p>
                                    <p t-field="o.name"/>
                                </div>
                                <div class="col-xs-2">
                                    <p style="color:red;font-weight: bold;">Code:</p>
                                    <p t-field="o.code"/>
                                </div>
                                <div class="col-xs-2">
                                    <p style="color:red;font-weight: bold;">Student name:</p>
                                    <p t-field="o.student_id"/>
                                </div>
                                <div class="col-xs-2">
                                    <p style="color:red;font-weight: bold;"> Date inscription:</p>
                                    <p t-field="o.start_date"/>
                                </div>

                            </div>
                        </div>

                    </t>
                </t>
            </t>
        </template>
</odoo>