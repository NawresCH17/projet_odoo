<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <report
            id="report_claim_view"
            model="claims.claims"
            string="Claim Report"
            report_type="qweb-pdf"
            name="Services.report_template_claim_view"
            file="Services.report_template_claim_view"
            menu="True"
        />

        <template id="report_template_claim_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div style="float:left;padding:5px">
                          <img src='/web/binary/company_logo'/>
			            </div>
                        <div class="page" >
                            <h2 style="text-align:center;font-weight: bold;">Claim Report</h2>

                            <table style="border: 1px solid black;width:100%;padding:20px">
									 <tr>
                                        <td style="color:red;font-weight: bold;">Name: </td>
                                        <td><span style="font-size: 23;" t-field="o.name"/></td></tr>
									 <tr>
                                        <td style="color:red;font-weight: bold;">Student </td>
                                        <td><span style="font-size: 23;" t-field="o.student_id" /></td></tr>
									 <tr>
                                        <td style="color:red;font-weight: bold;">Date ask: </td>
                                        <td><span style="font-size: 23;" t-field="o.start_date" /></td></tr>

                                     <tr>
                                        <td style="color:red;font-weight: bold;">Description: </td>
                                        <td><span style="font-size: 23;" t-field="o.description" /></td></tr>

                                     <tr>
                                        <td style="color:red;font-weight: bold;">State: </td>
                                        <td><span style="font-size: 23;" t-field="o.state" /></td></tr>
                                     <br/><br/>
                             </table>
                             <br/><br/>
                            <div style="margin-left:600px">
                                <p>Barcode:</p> <br/>
                                <img t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', 'text', 120, 120)"/>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
</odoo>